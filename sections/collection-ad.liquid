{% if section.settings.show %}
<div class="smCollectionAd smCollectionAd--unset" style="order:{{ section.settings.order }}; display:none;">
    <a class="smCollectionAd__inner"
    href="{{ section.settings.link }}">
        <div class="smCollectionAd__imageWrapper">
            <img class="smCollectionAd__image"
            src="{{ section.settings.image | img_url: '600x' }}"
            alt="{{ section.settings.image.alt }}">
        </div>
        <div class="smCollectionAd__textWrapper">
            <div class="smCollectionAd__title">
                {{ section.settings.title }}
            </div>
            <div class="smCollectionAd__text">
                {{ section.settings.text }}
            </div>
        </div>
    </a>
</div>

<style>
.smCollectionAd__inner{
    position: relative;
    display: block;
    border-radius: 20px;
    overflow: hidden;
}
.smCollectionAd__imageWrapper{
        position: relative;
    overflow: hidden;
    border-radius: 20px;
    aspect-ratio: 1 / 1.61;
}
.smCollectionAd__image{
        width: 100%;
    height: 100%;
    object-fit: cover;
}
.smCollectionAd__textWrapper{
    position: absolute;
    bottom: 0;
    z-index: 1;
    color: white;
    padding: 20px;
    background: linear-gradient(0deg, rgba(0, 0, 0, 0.6), transparent);
    padding-top: 100px;
}
.smCollectionAd__title{
        font-family: 'Helvetica';
    font-weight: 900;
    font-size: 27px;
    margin-bottom: 10px;
}
</style>

{% endif %}

{% schema %}
{
  "name": "Collection Ad",
  "settings": [
    {
      "type": "checkbox",
      "id": "show",
      "label": "Show Ad in Collections"
    },
    {
      "type": "number",
      "id": "order",
      "label": "placement order"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    }
  ]
}
{% endschema %}
