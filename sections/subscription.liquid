{% comment %}
  Subscription Section
  Newsletter signup with email input and button
{% endcomment %}

<div class="subscription-win" style="padding: {{ section.settings.mobile_padding_top }}px {{ section.settings.mobile_padding_sides }}px {{ section.settings.mobile_padding_bottom }}px;">
  <div class="subscription-win-wrapper">
    {% for block in section.blocks %}
      {% case block.type %}

        {% when 'image' %}
          <div class="subscription-win-image-container" style="height: {{ section.settings.mobile_image_height }}px;" {{ block.shopify_attributes }}>
            {% if block.settings.image_desktop != blank or block.settings.image_mobile != blank %}
              {% comment %} Desktop Image {% endcomment %}
              {% if block.settings.image_desktop != blank %}
                {{ block.settings.image_desktop | image_url: width: 1920 | image_tag: class: 'subscription-win-background-image none-480', loading: 'lazy' }}
              {% endif %}

              {% comment %} Mobile Image {% endcomment %}
              {% if block.settings.image_mobile != blank %}
                {{ block.settings.image_mobile | image_url: width: 1344 | image_tag: class: 'subscription-win-background-image block-480', loading: 'lazy' }}
              {% endif %}
            {% else %}
              <div class="subscription-win-image-placeholder">
                {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {% endif %}
          </div>

        {% when 'title' %}
          <div class="subscription-win-title-wrapper align-{{ block.settings.alignment }}" {{ block.shopify_attributes }}>
            {% if block.settings.title != blank %}
              <h2 class="subscription-win-title">{{ block.settings.title }}</h2>
            {% endif %}
          </div>

        {% when 'text' %}
          <div class="subscription-win-text-wrapper align-{{ block.settings.alignment }}" {{ block.shopify_attributes }}>
            {% if block.settings.text != blank %}
              <div class="subscription-win-text">{{ block.settings.text }}</div>
            {% endif %}
          </div>

        {% when 'newsletter' %}
          <div class="subscription-win-newsletter-wrapper" {{ block.shopify_attributes }}>
            {% form 'customer', id: 'SubscriptionWinForm', class: 'subscription-win-form' %}
              <input type="hidden" name="contact[tags]" value="newsletter">

              <div class="subscription-win-form-group">
                <input
                  type="email"
                  name="contact[email]"
                  id="subscription-win-email"
                  class="subscription-win-input"
                  placeholder="{{ block.settings.placeholder | default: 'Enter your email' }}"
                  required
                  autocomplete="email"
                >

                <button type="submit" class="btn btn--primary subscription-win-button">
                  <span>{{ block.settings.button_text | default: 'Subscribe' }}</span>
                  <svg width="18" height="14" viewBox="0 0 18 14" fill="none" xmlns="http://www.w3.org/2000/svg" class="button-arrow">
                    <path d="M11.0391 0L9.96094 1.07812L14.8828 6H0V7.5H14.8828L9.96094 12.4219L11.0391 13.5L18 6.75L11.0391 0Z" fill="currentColor"/>
                  </svg>
                </button>
              </div>

              {% if form.posted_successfully? %}
                <p class="subscription-win-success-message">{{ block.settings.success_message | default: 'Thanks for subscribing!' }}</p>
              {% endif %}

              {% if form.errors %}
                <p class="subscription-win-error-message">{{ form.errors.messages['email'] }}</p>
              {% endif %}
            {% endform %}
          </div>

      {% endcase %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Subscription",
  "settings": [
    {
      "type": "range",
      "id": "mobile_padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Mobile Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "mobile_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Mobile Padding Bottom",
      "default": 40
    },
    {
      "type": "range",
      "id": "mobile_padding_sides",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Mobile Padding Sides",
      "default": 16
    },
    {
      "type": "range",
      "id": "mobile_image_height",
      "min": 200,
      "max": 800,
      "step": 10,
      "unit": "px",
      "label": "Mobile Image Height",
      "default": 400
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Background Image",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image_desktop",
          "label": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile Image"
        }
      ]
    },
    {
      "type": "title",
      "name": "Title",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Subscribe & Win"
        },
        {
          "type": "select",
          "id": "alignment",
          "label": "Alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Join our newsletter for exclusive offers and health insights.</p>"
        },
        {
          "type": "select",
          "id": "alignment",
          "label": "Alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter Form",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "placeholder",
          "label": "Email Placeholder",
          "default": "Enter your email"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Subscribe"
        },
        {
          "type": "text",
          "id": "success_message",
          "label": "Success Message",
          "default": "Thanks for subscribing!"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Subscription",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "title"
        },
        {
          "type": "text"
        },
        {
          "type": "newsletter"
        }
      ]
    }
  ]
}
{% endschema %}
