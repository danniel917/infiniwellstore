{% comment %}
  Subscription Section
  Newsletter signup with email input and button
  Similar to Feel the Difference but with newsletter form instead of icon+text
{% endcomment %}

{{ 'subscription.css' | asset_url | stylesheet_tag }}

<style>
  /* Dynamic Padding - Outer Container */
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.paddingtop | round: 0 }}px;
    padding-bottom: {{ section.settings.paddingbottom | round: 0 }}px;
    padding-left: {{ section.settings.paddingleft | round: 0 }}px;
    padding-right: {{ section.settings.paddingright | round: 0 }}px;
  }

  /* Mobile Padding - Outer Container */
  @media screen and (max-width: 768px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.paddingtopmobile | round: 0 }}px;
      padding-bottom: {{ section.settings.paddingbottommobile | round: 0 }}px;
      padding-left: {{ section.settings.paddingleftmobile | round: 0 }}px;
      padding-right: {{ section.settings.paddingrightmobile | round: 0 }}px;
    }
  }

  /* Image Container Height - Desktop */
  .section-{{ section.id }} .subscription-win-image-container {
    height: {{ section.settings.image_height_desktop | round: 0 }}px;
    max-height: {{ section.settings.image_max_height_desktop | round: 0 }}px;
  }

  /* Image Container Height - Mobile */
  @media screen and (max-width: 768px) {
    .section-{{ section.id }} .subscription-win-image-container {
      height: {{ section.settings.image_height_mobile | round: 0 }}px;
      max-height: {{ section.settings.image_max_height_mobile | round: 0 }}px;
    }
  }

  /* Content Container Padding - Desktop */
  .section-{{ section.id }} .subscription-win-content {
    padding-top: {{ section.settings.content_paddingtop | round: 0 }}px;
    padding-bottom: {{ section.settings.content_paddingbottom | round: 0 }}px;
    padding-left: {{ section.settings.content_paddingleft | round: 0 }}px;
    padding-right: {{ section.settings.content_paddingright | round: 0 }}px;
  }

  /* Content Container Padding - Mobile */
  @media screen and (max-width: 768px) {
    .section-{{ section.id }} .subscription-win-content {
      padding-top: {{ section.settings.content_paddingtopmobile | round: 0 }}px;
      padding-bottom: {{ section.settings.content_paddingbottommobile | round: 0 }}px;
      padding-left: {{ section.settings.content_paddingleftmobile | round: 0 }}px;
      padding-right: {{ section.settings.content_paddingrightmobile | round: 0 }}px;
    }
  }
</style>

<section class="subscription-win section-{{ section.id }}-padding section-{{ section.id }}">
  <div class="subscription-win-wrapper">

    <!-- Image Container -->
    <div class="subscription-win-image-container">
      {% for block in section.blocks %}
        {% if block.type == 'image' %}
          <!-- Desktop Image -->
          {% if block.settings.image_desktop != blank %}
            {{ block.settings.image_desktop | image_url: width: 1920 | image_tag: class: 'subscription-win-background-image none-480', loading: 'lazy' }}
          {% else %}
            <div class="subscription-win-image-placeholder none-480">
              {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {% endif %}

          <!-- Mobile Image -->
          {% if block.settings.image_mobile != blank %}
            {{ block.settings.image_mobile | image_url: width: 1344 | image_tag: class: 'subscription-win-background-image block-480', loading: 'lazy' }}
          {% elsif block.settings.image_desktop != blank %}
            {{ block.settings.image_desktop | image_url: width: 1344 | image_tag: class: 'subscription-win-background-image block-480', loading: 'lazy' }}
          {% else %}
            <div class="subscription-win-image-placeholder block-480">
              {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>

    <!-- Content Container -->
    <div class="subscription-win-content">

      {% for block in section.blocks %}

        {% if block.type == 'title' %}
          <div class="subscription-win-title-wrapper align-{{ block.settings.alignment }}" {{ block.shopify_attributes }}>
            {% if block.settings.title != blank %}
              <h2 class="subscription-win-title">{{ block.settings.title }}</h2>
            {% endif %}
          </div>
        {% endif %}

        {% if block.type == 'text' %}
          <div class="subscription-win-text-wrapper align-{{ block.settings.alignment }}" {{ block.shopify_attributes }}>
            {% if block.settings.content != blank %}
              <div class="subscription-win-text">{{ block.settings.content }}</div>
            {% endif %}
          </div>
        {% endif %}

        {% if block.type == 'newsletter' %}
          <div class="subscription-win-newsletter-wrapper" {{ block.shopify_attributes }}>
            {% form 'customer', id: 'SubscriptionWinForm', class: 'subscription-win-form' %}
              <input type="hidden" name="contact[tags]" value="newsletter">

              <div class="subscription-win-form-group">
                <input
                  type="email"
                  name="contact[email]"
                  id="subscription-win-email"
                  class="subscription-win-input"
                  placeholder="{{ block.settings.placeholder | default: 'Enter your email' }}"
                  required
                  autocomplete="email"
                >

                <button type="submit" class="btn btn--primary subscription-win-button">
                  <span>{{ block.settings.button_text | default: 'Subscribe' }}</span>
                  <svg width="18" height="14" viewBox="0 0 18 14" fill="none" xmlns="http://www.w3.org/2000/svg" class="button-arrow">
                    <path d="M11.0391 0L9.96094 1.07812L14.8828 6H0V7.5H14.8828L9.96094 12.4219L11.0391 13.5L18 6.75L11.0391 0Z" fill="currentColor"/>
                  </svg>
                </button>
              </div>

              {% if form.posted_successfully? %}
                <p class="subscription-win-success-message">{{ block.settings.success_message | default: 'Thanks for subscribing!' }}</p>
              {% endif %}

              {% if form.errors %}
                <p class="subscription-win-error-message">{{ form.errors.messages['email'] }}</p>
              {% endif %}
            {% endform %}
          </div>
        {% endif %}

      {% endfor %}

    </div>

  </div>
</section>

