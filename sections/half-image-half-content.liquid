{% if section.blocks.size > 0 %}
  {% for block in section.blocks %}
    <div class="half-image-half-content {%if section.settings.bg == true%}bg-brown{%endif%}">
      <div class="container-1260 flex">
        <div
          class="full-format flex-justify-column-center content {% if block.settings.image == blank %} full {% endif %} {%if block.settings.center == true%}center{%endif%}"
          data-aos="fade-up"
          data-aos-duration="2000"
        >
          {% if block.settings.title1 != blank %}
            <h2 class="w-250 {% if block.settings.fontSize == true %} size {% endif %}">
              {{ block.settings.title1 }}
              {% if block.settings.title2 != blank %}
                <span class="color-grey h2">{{ block.settings.title2 }}</span>
              {% endif %}
            </h2>
          {% endif %}
          {% if block.settings.description != blank %}
            {{ block.settings.description }}
          {% endif %}
          {% if block.settings.buttonText != blank %}
            <a
              href="{{ block.settings.buttonLink }}"
              title="Read More About {{ block.settings.buttonText }}"
              aria-label="Read More About {{ block.settings.buttonText }}"
              class="btn--primary m-t-15"
            >
              {{ block.settings.buttonText }}
            </a>
          {% endif %}
        </div>
        {% if block.settings.image != blank %}
          <div
            class="image-section"
            data-aos="fade-up"
            data-aos-duration="2000"
          >
            {{ block.settings.image | image_url: width: 1262 | image_tag: loading: 'lazy', widths: '1262x1000' }}
          </div>
        {% endif %}
      </div>
    </div>
  {% endfor %}
{% endif %}

{% schema %}
{
  "name": "Half Image Half Content",
  "settings": [
    {
      "type": "header",
      "content": "Background Colour"
    },
    {
      "type": "checkbox",
      "id": "bg",
      "label": "Brown Background Color"
    }
  ],

  "blocks": [
    {
      "type": "image",
      "name": "Section",
      "settings": [
        {
          "type": "header",
          "content": "Content"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": {
            "en": "1262 x 1000px Recommended"
          }
        },
        {
          "type": "text",
          "id": "title1",
          "label": "Title (Black)"
        },
        {
          "type": "text",
          "id": "title2",
          "label": "Title (Grey)"
        },

        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "buttonText",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "buttonLink",
          "label": "Button Link"
        },
        {
          "type": "header",
          "content": "Extra Settings",
          "info": "Recommened to be used by the developer only"
        },
        {
          "type": "checkbox",
          "id": "fontSize",
          "label": "Do you want the title to be bigger?"
        },
        {
          "type": "header",
          "content": "Mobile Settings"
        },
        {
          "type": "checkbox",
          "id": "center",
          "label": "Align Text Center"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Half Image Half Content"
    }
  ]
}
{% endschema %}
