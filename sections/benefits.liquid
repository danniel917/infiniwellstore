{% comment %}
Section: Benefits
- Full-width section with optional video or image background
- Separate media settings for desktop and mobile (video or image)
- Main title with alignment options
- Collapsible content blocks (max 4)
- Optional button
{% endcomment %}

{{ 'benefits.css' | asset_url | stylesheet_tag }}

<style>
  /* Section Padding */
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.paddingtop | round: 0 }}px;
    padding-bottom: {{ section.settings.paddingbottom | round: 0 }}px;
  }

  /* Content Container Padding */
  .section-{{ section.id }} .content-padding {
    padding-top: {{ section.settings.content_paddingtop | round: 0 }}px;
    padding-bottom: {{ section.settings.content_paddingbottom | round: 0 }}px;
  }

  /* Mobile Padding */
  @media screen and (max-width: 768px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.paddingtopmobile | round: 0 }}px;
      padding-bottom: {{ section.settings.paddingbottommobile | round: 0 }}px;
    }

    .section-{{ section.id }}
    .content-padding {
      padding-top: {{ section.settings.content_paddingtopmobile | round: 0 }}px;
      padding-bottom: {{ section.settings.content_paddingbottommobile | round: 0 }}px;
    }
  }
</style>

<section class="benefits section-{{ section.id }}-padding section-{{ section.id }}">
  <div class="container-benefits">

    <!-- Media Block (Full Width, Height 100%, Centered) - Video or Image -->
    {% for block in section.blocks %}
      {% if block.type == 'video' %}
        <div class="video-container-wrapper">
          <div class="video-container" {{ block.shopify_attributes }}>

            <!-- Desktop Media -->
            {% if block.settings.media_type_desktop == 'image' %}
              {% if block.settings.image_desktop != blank %}
                <img
                  src="{{ block.settings.image_desktop | image_url: width: 2000 }}"
                  srcset="{{ block.settings.image_desktop | image_url: width: 1000 }} 1000w,
                          {{ block.settings.image_desktop | image_url: width: 1500 }} 1500w,
                          {{ block.settings.image_desktop | image_url: width: 2000 }} 2000w"
                  sizes="100vw"
                  width="{{ block.settings.image_desktop.width }}"
                  height="{{ block.settings.image_desktop.height }}"
                  alt=""
                  class="video-background none-480"
                  loading="lazy">
              {% else %}
                <div class="video-placeholder none-480">
                  {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {% endif %}
            {% else %}
              {% if block.settings.video_desktop != blank %}
                {{ block.settings.video_desktop | video_tag: autoplay: true, loop: true, muted: true, class: 'video-background none-480' }}
              {% else %}
                <div class="video-placeholder none-480">
                  {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {% endif %}
            {% endif %}

            <!-- Mobile Media -->
            {% if block.settings.media_type_mobile == 'image' %}
              {% if block.settings.image_mobile != blank %}
                {% assign mobile_image = block.settings.image_mobile %}
              {% else %}
                {% assign mobile_image = block.settings.image_desktop %}
              {% endif %}
              {% if mobile_image != blank %}
                <img
                  src="{{ mobile_image | image_url: width: 1000 }}"
                  srcset="{{ mobile_image | image_url: width: 500 }} 500w,
                          {{ mobile_image | image_url: width: 750 }} 750w,
                          {{ mobile_image | image_url: width: 1000 }} 1000w"
                  sizes="100vw"
                  width="{{ mobile_image.width }}"
                  height="{{ mobile_image.height }}"
                  alt=""
                  class="video-background block-480"
                  loading="lazy">
              {% else %}
                <div class="video-placeholder block-480">
                  {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {% endif %}
            {% else %}
              {% if block.settings.video_mobile != blank %}
                {% assign mobile_video = block.settings.video_mobile %}
              {% else %}
                {% assign mobile_video = block.settings.video_desktop %}
              {% endif %}
              {% if mobile_video != blank %}
                {{ mobile_video | video_tag: autoplay: true, loop: true, muted: true, class: 'video-background block-480' }}
              {% else %}
                <div class="video-placeholder block-480">
                  {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {% endif %}
            {% endif %}

          </div>
        </div>
      {% endif %}
    {% endfor %}

    <!-- Content Container (with padding) -->
    <div class="content-container content-padding">

      <!-- Title Block -->
      {% for block in section.blocks %}
        {% if block.type == 'title' %}
          <div class="title-wrapper align-{{ block.settings.alignment }}" {{ block.shopify_attributes }}>
            {% if block.settings.title != blank %}
              <h2 class="benefits-title">{{ block.settings.title }}</h2>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}

      <!-- Collapsible Content Blocks -->
      <div class="collapsible-wrapper">
        <ul class="accordian js__accordian">
          {% for block in section.blocks %}
            {% if block.type == 'collapsible' %}
              <li {{ block.shopify_attributes }}>
                <h3 class="collapsible-header">
                  <span class="accordion-icon-wrapper">
                    {% if block.settings.icon_image != blank %}
                      <img
                        src="{{ block.settings.icon_image | image_url: width: 200 }}"
                        alt=""
                        class="accordion-icon"
                        width="48"
                        height="48">
                    {% else %}
                      <svg
                        class="icon-default"
                        width="48"
                        height="48"
                        viewBox="0 0 48 48"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg">
                        <circle
                          cx="24"
                          cy="24"
                          r="23"
                          stroke="currentColor"
                          stroke-width="2" />
                        <path
                          d="M24 14V34M14 24H34"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round" />
                      </svg>
                    {% endif %}
                  </span>
                  <span class="collapsible-title">{{ block.settings.title }}</span>
                  <span class="icon-wrapper">
                    <svg
                      class="icon-plus"
                      width="20"
                      height="20"
                      viewBox="0 0 20 20"
                      fill="none"
                      xmlns="http://www.w3.org/2000/svg">
                      <path
                        d="M10 4V16M4 10H16"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round" />
                    </svg>
                    <svg
                      class="icon-minus"
                      width="20"
                      height="20"
                      viewBox="0 0 20 20"
                      fill="none"
                      xmlns="http://www.w3.org/2000/svg">
                      <path
                        d="M4 10H16"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round" />
                    </svg>
                  </span>
                </h3>
                <div class="content">
                  <div class="content-inner">
                    {% if block.settings.content != blank %}
                      <div class="collapsible-text">{{ block.settings.content }}</div>
                    {% endif %}
                  </div>
                </div>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>

      <!-- Button Block -->
      {% for block in section.blocks %}
        {% if block.type == 'button' %}
          {% if block.settings.button_label != blank %}
            <div class="button-wrapper" {{ block.shopify_attributes }}>
              <a href="{{ block.settings.button_url }}" class="btn--primary">
                {{ block.settings.button_label }}
              </a>
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}

    </div>
  </div>
</section>

