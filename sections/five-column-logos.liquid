{% if section.blocks.size > 0 %}
  {% if section.settings.title1 != blank %}
    <div class="six-column-logos">
      <div class="container-910">
        <div
          class="heading"
          data-aos="fade-up"
          data-aos-duration="2000"
        >
          <h2 class="h1">
            {{ section.settings.title1 }}
            {% if section.settings.title2 != blank %}
              <span class="color-grey h1">{{ section.settings.title2 }}</span>
            {% endif %}
          </h2>
          {% if section.settings.buttonText != blank %}
            <a
              href="{{ section.settings.buttonLink }}"
              title="Read More About {{ section.settings.buttonText }}"
              aria-label="Read More About {{ section.settings.buttonText }}"
              class="link--primary"
            >
              {{ section.settings.buttonText }}
            </a>
          {% endif %}
        </div>
        <ul class="flex-wrap">
          {%- for block in section.blocks -%}
            {% if block.settings.logo != blank %}
              <li>
                <a
                  href="{{ block.settings.link }}"
                  title="Read More About {{ block.settings.title }}"
                  aria-label="Read More About {{ block.settings.title }}"
                  class="full-link"
                >
                  <div class="image-section">
                    {{ block.settings.logo | image_url: width: 110 | image_tag: loading: 'lazy', widths: '120x120' }}
                  </div>
                  {% if block.settings.title != blank %}
                    <p class="small">{{ block.settings.title }}</p>
                  {% endif %}
                </a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>
  {% endif %}
{% endif %}

{% schema %}
{
  "name": "Four Column Logos",
  "settings": [
    {
      "type": "text",
      "id": "title1",
      "label": "Title (Black)"
    },
    {
      "type": "text",
      "id": "title2",
      "label": "Title (Grey)"
    },
    {
      "type": "text",
      "id": "buttonText",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "buttonLink",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo",
          "info": "120 x 120px Recommended"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Four Column Logos"
    }
  ]
}
{% endschema %}
