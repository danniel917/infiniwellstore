        },
        {
          "type": "text",
          "id": "gradiendCss",
          "label": "Gradient CSS"
        },

        {
          "type": "select",
          "id": "content_alignment",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "right", "label": "Right" },
            { "value": "center", "label": "Center" }
          ],
          "label": "Content Horizontal Alignment",
          "info": "By default it is center aligned.",
          "default": "center"
        },
        {
          "type": "select",
          "id": "content_alignment_vertical",
          "options": [
            { "value": "top", "label": "Top" },
            { "value": "bottom", "label": "Bottom" },
            { "value": "center", "label": "Center" }
          ],
          "label": "Content Vertical Alignment",
          "info": "By default it is center aligned.",
          "default": "center"
        },
          {
          "type": "header",
          "content": "Content Width"
        },
        {
          "type": "range",
          "id": "content_width",
          "min": 300,
          "max": 800,
          "step": 10,
          "unit": "px",
          "label": "Content Width",
          "default": 500
        },
        {
          "type": "header",
          "content": "Color Settings"
        },
        {
          "type": "select",
          "id": "color_scheme",
          "options": [
            { "value": "#1A1F2A", "label": "Blue" },
            { "value": "#fff", "label": "White" }
          ],
          "label": "Color Scheme",
          "default": "#1A1F2A"
        },
        {
  "type": "header",
  "content": "Button Settings"
},
{
  "type": "select",
  "id": "button_style",
  "options": [
    { "value": "outline", "label": "Outline" },
    { "value": "solid", "label": "Solid" },
  ],
  "label": "Button Style",
  "default": "solid"
},
        {
          "type": "header",
          "content": "Reviews"
        },
        {
          "type": "image_picker",
          "id": "ratingImage",
          "label": "Rating Image"
        }, 
        {
          "type": "text",
          "id": "ratingCount",
          "label": "Rating Count"
        },
        {
          "type": "inline_richtext",
          "id": "ratingSummary",
          "label": "Rating Summary"
        },
        {
          "type": "header",
          "content": "List"
        }, 
        {
          "type": "checkbox",
          "id": "ratingType",
          "label": "Rating Type Horizontal",
          "info": "By default Vertial"
        },
        {
          "type": "image_picker",
          "id": "icon1",
          "label": "Icon 1"
        },
        {
          "type": "text",
          "id": "listTitle1",
          "label": "List Title 1"
        },
        {
          "type": "image_picker",
          "id": "icon2",
          "label": "Icon 2"
        },
        {
          "type": "text",
          "id": "listTitle2",
          "label": "List Title 2"
        },
        {
          "type": "image_picker",
          "id": "icon3",
          "label": "Icon 3"
        },
        {
          "type": "text",
          "id": "listTitle3",
          "label": "List Title 3"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
