          }
        },
        {
          "type": "header",
          "content": "Content"
        },
        {
          "type": "image_picker",
          "id": "contentImage",
          "label": "Content Image"
        },
        {
          "type": "range",
          "id": "contentImageWidth",
          "min": 100,
          "max": 1000,
          "step": 10,
          "unit": "px",
          "label": "Content Image Width",
          "default": 400
        },
        {
          "type": "range",
          "id": "contentImageHeight",
          "min": 100,
          "max": 1000,
          "step": 10,
          "unit": "px",
          "label": "Content Image Height",
          "default": 400
        },
        {
          "type": "image_picker",
          "id": "titleImage",
          "label": "Title Image",
          "info": {
            "en": "1000 x 200px Recommended"
          }
        },
        {
          "type": "inline_richtext",
          "id": "pretitle",
          "label": "Pre Title"
        },
        {
          "type": "inline_richtext",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "header",
          "content": "Title Font Size"
        },
        {
          "type": "range",
          "id": "fontSizeTitle", 
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "Font Size (Desktop)",
          "default": 40
        },
        {
          "type": "range",
          "id": "fontSizeTitleMobile",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "Font Size (Mobile)",
          "default": 25
        },
        {
          "type": "richtext",
          "id": "subtitle",
          "label": "SubTitle"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "buttonText",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "buttonLink",
          "label": "Button Link"
        },
        {
          "type": "header",
          "content": "Top/Bottom Section Space"
        },
        {
          "type": "range",
          "id": "paddingtop",
          "min": 0,
          "max": 200,
          "step": 2,
          "unit": "px",
          "label": "Padding top",
          "default": 150
        },
        {
          "type": "range",
          "id": "paddingbottom",
          "min": 0,
          "max": 200,
          "step": 2,
          "unit": "px",
          "label": "Padding Bottom",
