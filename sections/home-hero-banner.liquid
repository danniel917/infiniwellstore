{
  "name": "Hero Banner",
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "backgroundImage",
          "label": "Background Image (Desktop)",
          "info": {
            "en": "2880 x 1620px Recommended"
          }
        },
        {
          "type": "image_picker",
          "id": "backgroundImageMobile",
          "label": "Background Image (Mobile)",
          "info": {
            "en": "750 x 1400px Recommended"
          }
        },
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo",
          "info": {
            "en": "162 x 144px Recommended"
          }
        },
        {
          "type": "url",
          "id": "video",
          "label": "Background Video"
        },
        {
          "type": "checkbox",
          "id": "videobanner",
          "label": "Video Banner",
          "default": false
        },
        {
          "type": "image_picker",
          "id": "productImage",
