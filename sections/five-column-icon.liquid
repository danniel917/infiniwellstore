{% if section.blocks.size > 0 %}
  <div class="five-column-icon">
    <div class="container-1160">
      <ul class="flex">
        {%- for block in section.blocks -%}
          {% if block.settings.title != blank %}
            <li>
              {% if block.settings.image != blank %}
                <div class="image-section">
                  <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt }}">
                </div>
              {% endif %}
              <p class="small">{{ block.settings.title }}</p>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Five Column Icon",
  "blocks": [
    {
      "type": "image",
      "name": "Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "150 x 150px Recommended"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Five Column Icon"
    }
  ]
}
{% endschema %}
