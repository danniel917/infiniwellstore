.product.bpc-lx .outer-pdp-thumbnail-slider.collapsed::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    background: linear-gradient(0deg, #FEFFFE 25%, transparent);
    inset: 0;
    z-index: 2;
    pointer-events: none;
}

