    <div class="breadcrumb" role="navigation" aria-label="breadcrumbs">
      {% assign full_url = request.path %}
      {% assign product_url = full_url | split: '/' %}

      <a href="{{ routes.root_url }}" class="breadcrumb-link">Home</a>
