{% comment %} 
    ============================================================
    SECTION: Full Width Media with Content Blocks
    ============================================================
    Displays full-width background media (image or video) with
    constrained inner content blocks.
   
    Features: 
    - Full-width image or video background (separate for mobile/desktop) 
    - Inner content constrained to 960px max-width 
    - Up to 2 content blocks with optional images 
    - Per-block text alignment 
    - Adjustable padding and max-height per device 
    - Optional background overlay for text readability 
    - AOS animations support (disabled in Customizer)
    ============================================================ 
{% endcomment %}

{{ 'full-width-media-blocks.css' | asset_url | stylesheet_tag }}

<style>
  /* Dynamic Padding */
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.paddingtop | round: 0 }}px;
    padding-bottom: {{ section.settings.paddingbottom | round: 0 }}px;
  }

  /* Dynamic Max Height */
  .section-{{ section.id }} {
    height: {{ section.settings.max_height_desktop | round: 0 }}px;
  }

  /* Background Overlay */
  {% if section.settings.overlay_enable %}
    .section-{{ section.id }}::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
      z-index: 0;
    }
  {% endif %}

  /* Block Image Custom Width */
  {% for block in section.blocks %}
    .section-{{ section.id }}
    .block-{{ block.id }}
    .block-image img {
      max-width: {{ block.settings.image_max_width | round: 0 }}px;
    }
  {% endfor %}

  /* Mobile Responsive */
  @media screen and (max-width: 768px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.paddingtopmobile | round: 0 }}px;
      padding-bottom: {{ section.settings.paddingbottomMobile | round: 0 }}px;
    }

    .section-{{ section.id }} {
      height: {{ section.settings.max_height_mobile | round: 0 }}px;
    }
  }
</style>

<section class="full-width-media-blocks section-{{ section.id }}-padding section-{{ section.id }}">

  <!-- Background Media (Absolute Positioned) -->
  {% assign use_video_desktop = section.settings.use_video_desktop %}
  {% assign use_video_mobile = section.settings.use_video_mobile %}

    {%- if use_video_desktop -%}
    <!-- Desktop Video Background -->
    {% if section.settings.video_desktop != blank %}
      {{ section.settings.video_desktop | video_tag: autoplay: true, loop: true, muted: true, class: 'media-background-video none-480' }}
    {% endif %}
  {% else %}
    <!-- Desktop Image Background -->
    {% if section.settings.image_desktop != blank %}
      <img
        class="media-background-image none-480"
        src="{{ section.settings.image_desktop | image_url: width: 2880 }}"
        alt="{{ section.settings.image_desktop.alt }}"
        width="2880"
        height="1620"
        loading="lazy">
    {% endif %}
  {%- endif -%}

  {%- if use_video_mobile -%}
    <!-- Mobile Video Background -->
    {% if section.settings.video_mobile != blank %}
      {% assign mobile_video = section.settings.video_mobile %}
    {% else %}
      {% assign mobile_video = section.settings.video_desktop %}
    {% endif %}
    {% if mobile_video != blank %}
      {{ mobile_video | video_tag: autoplay: true, loop: true, muted: true, class: 'media-background-video block-480' }}
    {% endif %}
  {% else %}
    <!-- Mobile Image Background -->
    {% if section.settings.image_mobile != blank %}
      {% assign mobile_image = section.settings.image_mobile %}
    {% else %}
      {% assign mobile_image = section.settings.image_desktop %}
    {% endif %}
    {% if mobile_image != blank %}
      <img
        class="media-background-image block-480"
        src="{{ mobile_image | image_url: width: 750 }}"
        alt="{{ mobile_image.alt }}"
        width="750"
        height="1400"
        loading="lazy">
    {% endif %}
  {%- endif -%}

  <!-- Content Container (Relative Positioned, Flex Column) -->
  <div class="container-960">
    {% for block in section.blocks limit: 2 %}
      {% assign alignment_class = '' %}
      {% case block.settings.alignment %}
        {% when 'left' %}
          {% assign alignment_class = 'left-align' %}
        {% when 'center' %}
          {% assign alignment_class = 'center-align' %}
        {% when 'right' %}
          {% assign alignment_class = 'right-align' %}
      {% endcase %}

      <div
        class="content-block block-{{ block.id }} {{ alignment_class }}"
        {% unless request.design_mode %}
        data-aos="fade-up"
        data-aos-duration="1000"
        data-aos-delay="{{ forloop.index0 | times: 200 }}"
        {% endunless %}
        {{ block.shopify_attributes }}>

        {% if block.settings.image != blank %}
          <div class="block-image">
            <img
              src="{{ block.settings.image | image_url: width: 400 }}"
              alt="{{ block.settings.image.alt }}"
              width="400"
              height="400"
              loading="lazy">
          </div>
        {% endif %}

        <div class="block-text">
          {% if block.settings.title != blank %}
            <h3 class="block-title h2">{{ block.settings.title }}</h3>
          {% endif %}

          {% if block.settings.description != blank %}
            <div class="block-description">
              {{ block.settings.description }}
            </div>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>

</section>

