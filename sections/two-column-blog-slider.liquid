{% if section.blocks.size > 0 %}
  {% if section.settings.title1 != blank %}
<style>
  .two-column-blog-slider .top-section {
    margin: 0 auto 2.25vw auto;
  }
</style>
    
    <div class="two-column-blog-slider">
      <div
        class="top-section flex"
        data-aos="fade-up"
        data-aos-duration="2000"
      >
        <h2 class="h1">
          {{ section.settings.title1 }}
          {% if section.settings.title2 != blank %}
            <span class="color-grey h1">{{ section.settings.title2 }}</span>
          {%- endif -%}
        </h2>
        {% if section.settings.buttonText != blank %}
          <a href="{{ section.settings.buttonLink }}" class="btn--primary ipad-none">
            {{- section.settings.buttonText -}}
          </a>
          <a href="{{ section.settings.buttonLink }}" class="link--primary ipad-block">
            {{- section.settings.buttonText -}}
          </a>
        {%- endif -%}
      </div>
      <div class="blog-card-slider js__blog-slider">
        <div class="swiper-wrapper">
          {%- for block in section.blocks -%}
            {% if block.settings.article != blank %}
              {% assign articleRelated = block.settings.article %}
              <div class="swiper-slide slide articlecard--outer">
                {%
                  include 'article_Card' with articleRelated:articleRelated, show_tags:true,show_title:true, show_shortdescription:true, show_readMore:
                  true
                %}
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
        <div class="slider-arrows">
          <div class="swiper-button-prev-blog-slider">
            {% include 'icon-arrow-slide-white' %}
          </div>
          <div class="swiper-button-next-blog-slider">
            {% include 'icon-arrow-slide' %}
          </div>
        </div>
      </div>

      <div class="mobile-blogs">
        {%- for block in section.blocks -%}
          {%- assign article = block.settings.article -%}
          <div class="articlecard--outer">
            {%
              include 'article_Card' with articleRelated:article, show_tags:true,show_title:true, show_shortdescription:true, show_readMore:
              true
            %}
            {% comment %}
              <a
                href="{{ block.settings.link }}"
                aria-label="Read More About {{ article.title }}"
                title="Read More About {{ article.title }}"
                class="full-link"
              >
                <div class="image-section">
                  {%- if article.image -%}
                    {{ article | img_url: '513x235', scale: 2 | img_tag: '' }}
                  {%- endif -%}
                </div>
                <div class="content">
                  <ul>
                    <li>{{ article.tags }}</li>
                  </ul>
                  <h3>{{ article.title }}</h3>
                  <p>{{ article.content }}</p>
                  <a
                    href="{{ block.settings.buttonLink }}"
                    title="Read More About {{ block.settings.buttonText }}"
                    aria-label="Read More About {{ block.settings.buttonText }}"
                    class="link--primary"
                  >
                    {{- block.settings.buttonText }}
                  </a>
                </div>
              </a>
            {% endcomment %}
          </div>
        {%- endfor -%}
      </div>
    </div>
  {%- endif -%}
{%- endif -%}

{% schema %}
{
  "name": "Two column Blog Slider",
  "settings": [
    {
      "type": "text",
      "id": "title1",
      "label": "Title 1"
    },
    {
      "type": "text",
      "id": "title2",
      "label": "Title 2"
    },
    {
      "type": "text",
      "id": "buttonText",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "buttonLink",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "block",
      "settings": [
        {
          "type": "article",
          "id": "article",
          "label": "Article"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "buttonText",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "buttonLink",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Two column Blog Slider"
    }
  ]
}
{% endschema %}
