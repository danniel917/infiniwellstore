{% comment %} 
  Section: Feel the Difference or it's Free 
  - Full-width section with image background 
  - Content container with title, text, icon+text items, and button 
{% endcomment %}

{{ 'feel-difference-free.css' | asset_url | stylesheet_tag }}

<style>
  /* Dynamic Padding - Outer Container */
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.paddingtop | round: 0 }}px;
    padding-bottom: {{ section.settings.paddingbottom | round: 0 }}px;
    padding-left: {{ section.settings.paddingleft | round: 0 }}px;
    padding-right: {{ section.settings.paddingright | round: 0 }}px;
  }

  /* Mobile Padding - Outer Container */
  @media screen and (max-width: 768px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.paddingtopmobile | round: 0 }}px;
      padding-bottom: {{ section.settings.paddingbottommobile | round: 0 }}px;
      padding-left: {{ section.settings.paddingleftmobile | round: 0 }}px;
      padding-right: {{ section.settings.paddingrightmobile | round: 0 }}px;
    }
  }

  /* Image Container Height - Desktop */
  .section-{{ section.id }} .difference-image-container {
    height: {{ section.settings.image_height_desktop | round: 0 }}px;
    max-height: {{ section.settings.image_max_height_desktop | round: 0 }}px;
  }

  /* Image Container Height - Mobile */
  @media screen and (max-width: 768px) {
    .section-{{ section.id }} .difference-image-container {
      height: {{ section.settings.image_height_mobile | round: 0 }}px;
      max-height: {{ section.settings.image_max_height_mobile | round: 0 }}px;
    }
  }

  /* Content Container Padding - Desktop */
  .section-{{ section.id }} .difference-content {
    padding-top: {{ section.settings.content_paddingtop | round: 0 }}px;
    padding-bottom: {{ section.settings.content_paddingbottom | round: 0 }}px;
    padding-left: {{ section.settings.content_paddingleft | round: 0 }}px;
    padding-right: {{ section.settings.content_paddingright | round: 0 }}px;
  }

  /* Content Container Padding - Mobile */
  @media screen and (max-width: 768px) {
    .section-{{ section.id }} .difference-content {
      padding-top: {{ section.settings.content_paddingtopmobile | round: 0 }}px;
      padding-bottom: {{ section.settings.content_paddingbottommobile | round: 0 }}px;
      padding-left: {{ section.settings.content_paddingleftmobile | round: 0 }}px;
      padding-right: {{ section.settings.content_paddingrightmobile | round: 0 }}px;
    }
  }
</style>

<section class="feel-difference-free section-{{ section.id }}-padding section-{{ section.id }}">
  <div class="difference-wrapper">

    <!-- Image Container -->
    <div class="difference-image-container">
      {% for block in section.blocks %}
        {% if block.type == 'image' %}
          <!-- Desktop Image -->
          {% if block.settings.image_desktop != blank %}
            {{ block.settings.image_desktop | image_url: width: 1920 | image_tag: class: 'difference-background-image none-480', loading: 'lazy' }}
          {% else %}
            <div class="difference-image-placeholder none-480">
              {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {% endif %}

          <!-- Mobile Image -->
          {% if block.settings.image_mobile != blank %}
            {{ block.settings.image_mobile | image_url: width: 1344 | image_tag: class: 'difference-background-image block-480', loading: 'lazy' }}
          {% elsif block.settings.image_desktop != blank %}
            {{ block.settings.image_desktop | image_url: width: 1344 | image_tag: class: 'difference-background-image block-480', loading: 'lazy' }}
          {% else %}
            <div class="difference-image-placeholder block-480">
              {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>

    <!-- Content Container -->
    <div class="difference-content">

      {% for block in section.blocks %}

        {% if block.type == 'title' %}
          <div class="difference-title-wrapper align-{{ block.settings.alignment }}" {{ block.shopify_attributes }}>
            {% if block.settings.title != blank %}
              <h2 class="difference-title">{{ block.settings.title }}</h2>
            {% endif %}
          </div>
        {% endif %}

        {% if block.type == 'text' %}
          <div class="difference-text-wrapper align-{{ block.settings.alignment }}" {{ block.shopify_attributes }}>
            {% if block.settings.content != blank %}
              <div class="difference-text">{{ block.settings.content }}</div>
            {% endif %}
          </div>
        {% endif %}

        {% if block.type == 'icon_text' %}
          <div class="difference-icon-text" {{ block.shopify_attributes }}>
            {% if block.settings.icon != blank %}
              <div class="icon-wrapper">
                <img
                  src="{{ block.settings.icon | image_url: width: 48 }}"
                  alt="{{ block.settings.icon.alt }}"
                  class="icon-image"
                  loading="lazy">
              </div>
            {% else %}
              <div class="icon-wrapper">
                <svg
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                  class="icon-placeholder">
                  <rect
                    width="24"
                    height="24"
                    rx="4"
                    fill="#E5E7EB" />
                </svg>
              </div>
            {% endif %}
            {% if block.settings.text != blank %}
              <span class="icon-text">{{ block.settings.text }}</span>
            {% endif %}
          </div>
        {% endif %}

        {% if block.type == 'button' %}
          {% if block.settings.button_label != blank %}
            <div class="difference-button-wrapper" {{ block.shopify_attributes }}>
              <a href="{{ block.settings.button_url }}" class="btn--primary difference-button">
                {{ block.settings.button_label }}
              </a>
            </div>
          {% endif %}
        {% endif %}

      {% endfor %}

    </div>

  </div>
</section>

