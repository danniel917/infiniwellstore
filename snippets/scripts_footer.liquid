<input type="hidden" id="cartCurrencyCode" value="{{ cart.currency.iso_code }}">
<input type="hidden" id="cartCurrencySymbol" value="{{ cart.currency.symbol }}">
<script>
  // Currency formatter: Initialize IMMEDIATELY and SYNCHRONOUSLY
  // This MUST be available before any cart functions execute
  var formatter = new Intl.NumberFormat("en-US", {
    style: "currency",
    currency: "{{ cart.currency.iso_code }}" || "USD",
    minimumFractionDigits: 2,
  });

  // Optional: Update formatter when jQuery is ready to use dynamic currency
  if (typeof window.ThemeInitQueue !== 'undefined') {
    window.ThemeInitQueue.add(function() {
      if (typeof $ !== 'undefined' && document.getElementById('cartCurrencyCode')) {
        var dynamicCurrency = $("#cartCurrencyCode").val();
        if (dynamicCurrency && dynamicCurrency !== "{{ cart.currency.iso_code }}") {
          formatter = new Intl.NumberFormat("en-US", {
            style: "currency",
            currency: dynamicCurrency,
            minimumFractionDigits: 2,
          });
        }
      }
    }, {
      name: 'Currency Formatter Update',
      requires: ['jquery'],
      priority: 1
    });
  }
</script>

  
