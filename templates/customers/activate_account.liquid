<div class="form-section not-logged-tempate  account-activate ">
  <div class="container-540">
    <h1>{{ 'customer.activate_account.title' | t }}</h1>

    {% form 'activate_customer_password' %}
      {%- if form.errors -%}
        <div class="form-message form-message--error">
          {{ form.errors | default_errors }}
        </div>
      {%- endif -%}
      <div class="floating-label-main">
        <input
          type="password"
          value=""
          name="customer[password]"
          id="CustomerPassword"
          placeholder=""
        >
        <label class="floating-label">{{ 'customer.activate_account.password' | t }}</label>
      </div>
      <div class="floating-label-main">
        <input
          type="password"
          value=""
          name="customer[password_confirmation]"
          id="CustomerPasswordConfirmation"
          placeholder=""
        >
        <label class="floating-label">{{ 'customer.activate_account.password_confirm' | t }}</label>
      </div>
      <div class="btn-wrapper">
        <p>{{ 'customer.activate_account.subtext' | t }}</p>
        <input
          type="submit"
          class="btn--primary"
          value="{{ 'customer.activate_account.submit' | t }}"
        >

        <div class="link--wrapper">
          <button
            type="submit"
            name="decline"

            class="link--primary button"
          >
            {{ 'customer.activate_account.cancel' | t }}
          </button>
        </div>
      </div>
    {% endform %}
  </div>
</div>
