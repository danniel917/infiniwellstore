<div class="form-section not-logged-tempate create-account">
  <div class="container-540">
    <h1 class="text-center">{{ 'customer.register.title' | t }}</h1>

    {%- assign formId = 'RegisterForm' -%}
    {% form 'create_customer', id: formId, novalidate: 'novalidate' %}
      {% comment %}
        <input type="hidden" name="return_to" value="/account">
      {% endcomment %}
      {% include 'form-status', form: form, form_id: formId %}
      <div class="floating-label-main">
        <input
          placeholder=""
          type="text"
          name="customer[first_name]"
          id="{{ formId }}-FirstName"
          {% if form.first_name %}
            value="{{ form.first_name }}"
          {% endif %}
          autocomplete="given-name"
        >
        <label class="floating-label">{{ 'customer.register.first_name' | t }}</label>
      </div>
      <div class="floating-label-main">
        <input
          placeholder=""
          type="text"
          name="customer[last_name]"
          id="{{ formId }}-LastName"
          {% if form.last_name %}
            value="{{ form.last_name }}"
          {% endif %}
          autocomplete="family-name"
        >
        <label class="floating-label">{{ 'customer.register.last_name' | t }}</label>
      </div>
      <div class="floating-label-main">
        <input
          placeholder=""
          type="email"
          name="customer[email]"
          id="{{ formId }}-email"
          class="{% if form.errors contains 'email' %} input--error{% endif %}"
          {% if form.email %}
            value="{{ form.email }}"
          {% endif %}
          autocorrect="off"
          autocapitalize="off"
          autocomplete="email"
          aria-required="true"
          {%- if form.errors contains 'email' -%}
            class="input--error" aria-invalid="true" aria-describedby="{{ formId }}-email-error"
          {%- endif -%}
        >
        {%- if form.errors contains 'email' -%}
          <span id="{{ formId }}-email-error" class="input-error-message">
            <span class="visually-hidden">{{ 'general.accessibility.error' | t }} </span>

            <span>
              {{- form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email }}.</span
            >
          </span>
        {%- endif -%}
        <label class="floating-label">{{ 'customer.register.email' | t }}</label>
      </div>
      <div class="floating-label-main">
        <input
          placeholder=""
          type="password"
          name="customer[password]"
          id="{{ formId }}-password"
          class="{% if form.errors contains 'password' %} input--error{% endif %}"
          aria-required="true"
          {%- if form.errors contains 'password' -%}
            class="input--error" aria-invalid="true" aria-describedby="{{ formId }}-password-error"
          {%- endif -%}
        >
        {%- if form.errors contains 'password' -%}
          <span id="{{ formId}}-password-error" class="input-error-message">
            <span>
              {{- form.errors.translated_fields.password | capitalize }}
              {{ form.errors.messages.password }}.</span
            >
          </span>
        {%- endif -%}
        <label class="floating-label">{{ 'customer.register.password' | t }}</label>
      </div>
      <div class="floating-label-main">
        <input
          placeholder=""
          type="password"
          value=""
          name="customer[password_confirmation]"
          id="password_confirm"
        >
        <span id="RegisterForm-confirmpassword-error" style="display:none" class="input-error-message">
          Password do not match
        </span>
        <label class="floating-label">Confirm Password</label>
      </div>
      <div class="btn-wrapper">
        <button type="submit" class="btn--primary">{{ 'customer.register.submit' | t }}</button>
        <div class="link--wrapper">
          <p class="already-login-section">
            Already have an account? <a class="link--primary" href="/account/login" title="Login">Login</a>
          </p>
        </div>
      </div>
    {% endform %}
  </div>
</div>

<script>
  $('form#RegisterForm').submit(function (e) {
    $('#RegisterForm-confirmpassword-error').hide();
    if ($('#RegisterForm-password').val() === $('#password_confirm').val()) {
      //alert('Password Good!!');
    } else {
      $('#RegisterForm-confirmpassword-error').show();
      e.preventDefault();
      e.stopImmediatePropagation();
    }
  });
</script>
