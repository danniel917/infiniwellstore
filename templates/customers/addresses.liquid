       <label class="floating-label">{{ 'customer.addresses.company' | t }}</label>
      </div>
       <div class="floating-label-main">
         <input type="text" placeholder="" id="AddressAddress1_{{form.id}}" class="address_form" name="address[address1]" value="{{form.address1}}" autocapitalize="words">
         <label class="floating-label">{{ 'customer.addresses.address1' | t }}</label>
        </div>
         <div class="floating-label-main">
