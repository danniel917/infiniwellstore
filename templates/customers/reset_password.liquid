<div
  class="form-section reset-password not-logged-tempate"
>
  <div class="container-540">
    {% comment %}
      This form must use 'reset_customer_password'
    {% endcomment %}
    {% form 'reset_customer_password' %}
      <h1>{{ 'customer.reset_password.title' | t }}</h1>
      <!-- <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p> -->
      {{ form.errors | default_errors }}
      <div class="floating-label-main">
        <input
          placeholder=""
          type="password"
          value=""
          name="customer[password]"
          id="ResetPassword"
          {% if form.errors contains 'password' %}
            class="error"
          {% endif %}
        >
        <label class="floating-label">{{ 'customer.reset_password.password' | t }}</label>
      </div>
      <div class="floating-label-main">
        <input
          placeholder=""
          type="password"
          value=""
          name="customer[password_confirmation]"
          id="PasswordConfirmation"
          {% if form.errors contains 'password_confirmation' %}
            class="error"
          {% endif %}
        >
        <label class="floating-label">{{ 'customer.reset_password.password_confirm' | t }}</label>
      </div>
      <div class="text-center btn-wrapper reset-password">
        <button type="submit" class="btn--primary">{{ 'customer.reset_password.submit' | t }}</button>
        <!-- <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p> -->
        <!-- <input type="submit" class="btn-green" value="{{ 'customer.reset_password.submit' | t }}"> -->
      </div>
    {% endform %}
  </div>
</div>
